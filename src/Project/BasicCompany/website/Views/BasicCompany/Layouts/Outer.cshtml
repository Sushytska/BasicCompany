@inherits WebViewPage
@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.ExperienceForms.Mvc.Html


<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Basic Company</title>
    <link href="https://fonts.googleapis.com/css?family=IBM+Plex+Mono|Montserrat" rel="stylesheet">
    <link rel="stylesheet" href="~/css/basic-company.css">

    @Html.RenderFormStyles()
</head>

<body>
    @RenderBody()

    @* Generally, disabling JavaScript interactivity in an MVC site when editing is a good idea. *@
    @if (!Sitecore.Context.PageMode.IsExperienceEditor)
    {
<script src="~/js/basic-company.js"></script>}

    @Html.RenderFormScripts()

</body>
</html>
